@model IEnumerable<DapperData.Models.Tablero>

@{
    ViewData["Title"] = "Mis Tableros";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var tablero in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <strong>@tablero.Nombre</strong>
                </div>
                <div class="card-body">
                    <p>@tablero.Descripcion</p>
                    <a href="@Url.Action("Detalle", "Tableros", new { id = tablero.Id })" class="btn btn-primary">Entrar</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Create", "Tableros")" class="btn btn-success">Crear Nuevo Tablero</a>
