@model IEnumerable<DapperData.Models.Tablero>
@{
    ViewData["Title"] = "Mis Tableros";
}

<h1>Mis Tableros</h1>

<a asp-action="Create" class="btn btn-success mb-3">Crear nuevo tablero</a>

@if (!Model.Any())
{
    <p>No tienes tableros a√∫n.</p>
}
else
{
    <ul class="list-group">
        @foreach (var tablero in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@tablero.Nombre</strong> - @tablero.Descripcion
                </div>
                <div>
                    <a asp-action="Detalle" asp-route-id="@tablero.Id" class="btn btn-primary btn-sm me-2">Entrar</a>
                    <form asp-action="Eliminar" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@tablero.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </div>
            </li>
        }
    </ul>
}
