@model DapperData.Models.Tablero

@{
    ViewData["Title"] = "Crear Nuevo Tablero";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre del Tablero</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" required />
    </div>

    <div class="form-group">
        <label for="Descripcion">Descripci√≥n</label>
        <textarea class="form-control" id="Descripcion" name="Descripcion" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear Tablero</button>
</form>

<a href="@Url.Action("Index", "Tableros")" class="btn btn-secondary mt-3">Volver a la lista de tableros</a>
