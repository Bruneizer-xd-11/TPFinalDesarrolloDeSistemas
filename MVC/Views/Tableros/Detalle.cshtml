@model DapperData.Models.TableroDetalleViewModel

@{
    ViewData["Title"] = Model.Nombre;
}

<h1>@Model.Nombre</h1>

@if (!Model.Columnas.Any())
{
    <p>No hay tareas en este tablero todav√≠a.</p>
}
else
{
    <div class="row">
        @foreach (var columna in Model.Columnas)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5>@columna.Nombre</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var tarea in columna.Tareas)
                        {
                            <li class="list-group-item">
                                <strong>@tarea.Titulo</strong>
                                @if (!string.IsNullOrEmpty(tarea.Descripcion))
                                {
                                    <p>@tarea.Descripcion</p>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
}
