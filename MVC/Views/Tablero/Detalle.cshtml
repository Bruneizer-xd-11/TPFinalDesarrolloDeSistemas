@model DapperData.Models.TableroDetalleViewModel

<h2>@Model.Nombre</h2>

<div class="row">
    @foreach (var col in Model.Columnas)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between">
                    <strong>@col.Nombre</strong>
                    <a href="/Tareas/Crear?tableroId=@Model.TableroId&columnaId=@col.ColumnaId"
                       class="btn btn-sm btn-primary">+ Tarea</a>
                </div>

                <div class="card-body">
                    @foreach (var t in col.Tareas)
                    {
                        <div class="card mb-2 p-2 border">
                            <strong>@t.Titulo</strong>
                            <p>@t.Descripcion</p>

                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-outline-secondary" href="/Tareas/Editar/@t.Id">Editar</a>

                                <form method="post" action="/Tareas/Eliminar">
                                    <input type="hidden" name="id" value="@t.Id" />
                                    <button class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}
