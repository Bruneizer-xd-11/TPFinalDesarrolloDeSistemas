@using DapperData.Models
@model DapperData.Models.TareaCreateViewModel

<h3>Nueva Tarea</h3>

<form method="post">
    <input type="hidden" asp-for="TableroId" />
    <input type="hidden" asp-for="ColumnaId" />

    <div class="mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Prioridad"></label>
        <select asp-for="Prioridad"
                asp-items="Html.GetEnumSelectList<Prioridad>()"
                class="form-select"></select>
    </div>

    <button class="btn btn-success">Crear</button>
    <a asp-controller="Tableros"
       asp-action="Detalle"
       asp-route-id="@Model.TableroId"
       class="btn btn-secondary">
        Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
